{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-native",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,  // Allows importing .json files
    "noEmit": true              // Prevents TypeScript from emitting compiled JS files, useful for React Native
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",  // Optionally exclude metro.config.js if it's not needed
    "jest.config.js"    // Optionally exclude Jest config if it's not TypeScript
  ]
}
